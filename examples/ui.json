{
  "task_type": "ml",
  "main_task": "classification",
  "sub_task": "image",
  "data_format": "imagefolder",
  "data_source": {
    "type": "folder",
    "value": "/path/to/dataset"
  },
  "dataloading": "custom_data_loader_code",
  "preprocessing": [
    {
      "name": "Resize",
      "params": {
        "size": [224, 224]
      }
    },
    {
      "name": "ToTensor",
      "params": {}
    }
  ],
  "model": {
    "use_pretrained": true,
    "pretrained": {
      "name": "ResNet50",
      "params": {
        "pretrained": true,
        "num_classes": 10
      }
    },
    "layers": []
  },
  "training": {
    "loss": {
      "name": "CrossEntropyLoss",
      "params": {
        "reduction": "mean"
      }
    },
    "optimizer": {
      "name": "Adam",
      "params": {
        "lr": 0.001,
        "weight_decay": 0.0001
      }
    },
    "metrics": [
      {
        "name": "Accuracy",
        "params": {}
      }
    ],
    "scheduler": {
      "name": "StepLR",
      "params": {
        "step_size": 5,
        "gamma": 0.1
      }
    },
    "monitoring": [
      "use_tensorboard"
    ],
    "hyper_params": {
      "batch_size": 32,
      "learning_rate": 0.001,
      "epochs": 10,
      "weight_decay": 0.0001
    },
    "early_stopping": {
      "enabled": true,
      "params": {
        "monitor": "val_loss",
        "patience": 3
      }
    }
  }
} 